-- ===============================
--  Light & Safe Bypass
-- ===============================

local successCount = 0
local totalModules = 3 -- Teleports, Auto-Farm, FireClickDetector

local function notify(msg)
    pcall(function()
        game.StarterGui:SetCore("SendNotification", {
            Title = "üî∞ Ascended Hub Bypass",
            Text = msg,
            Duration = 5
        })
    end)
end

local function safeActivate(name, func)
    local ok, err = pcall(func)
    if ok then
        successCount += 1
        notify("‚úÖ " .. name .. " ativado!")
    else
        warn("[Bypass] Falhou em: " .. name .. " | " .. tostring(err))
    end
end

-- === 1. Teleports seguros ===
safeActivate("Teleports Seguros", function()
    local TweenService = game:GetService("TweenService")
    local player = game.Players.LocalPlayer
    local char = player.Character or player.CharacterAdded:Wait()
    local hrp = char:WaitForChild("HumanoidRootPart")

    getgenv().safeTeleport = function(destCFrame)
        -- Movimentos suaves em Tween
        local tween = TweenService:Create(hrp, TweenInfo.new(0.3, Enum.EasingStyle.Linear), {CFrame = destCFrame})
        tween:Play()
        tween.Completed:Wait()
        task.wait(math.random(10, 30)/100) -- micro-delay aleat√≥rio
    end
end)

-- === 2. Auto-Farm seguro ===
safeActivate("Auto-Farm Seguro", function()
    getgenv().safeFarm = function(clickFunc)
        -- Evita clicks em excesso
        local maxPerSecond = 5
        local lastClick = 0
        return function(...)
            local now = tick()
            if now - lastClick >= 1 / maxPerSecond then
                lastClick = now
                pcall(clickFunc, ...)
            end
        end
    end
end)

-- === 3. FireClickDetector seguro ===
safeActivate("FireClickDetector Seguro", function()
    getgenv().safeFireClickDetector = function(detector)
        if detector and detector:IsA("ClickDetector") then
            pcall(function()
                detector:FireClick(game.Players.LocalPlayer)
            end)
        end
    end
end)

-- === Resultado final ===
local percent = math.floor((successCount / totalModules) * 100)
notify("‚ú® Bypass conclu√≠do (" .. percent .. "% efic√°cia)")
